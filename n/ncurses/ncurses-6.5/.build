#!/bin/bash
set -e

# Ncurses 6.5 build script based on LFS 12.4

# Configure
./configure --prefix=/usr           \
            --mandir=/usr/share/man \
            --with-shared           \
            --without-debug         \
            --without-normal        \
            --with-cxx-shared       \
            --enable-pc-files       \
            --with-pkg-config-libdir=/usr/lib/pkgconfig

# Build
make

# Install
make DESTDIR=$P install

# Create symlinks for compatibility
for lib in ncurses form panel menu ; do
    ln -sfv lib${lib}w.so "$P/usr/lib/lib${lib}.so"
    ln -sfv ${lib}w.pc    "$P/usr/lib/pkgconfig/${lib}.pc"
done

ln -sfv libncursesw.so "$P/usr/lib/libcurses.so"

# Install documentation
mkdir -pv "$P/usr/share/doc/ncurses-6.5"
cp -v -R doc/* "$P/usr/share/doc/ncurses-6.5"
