#!/bin/bash
set -e

# Coreutils 9.7 build script based on LFS 12.4

# Apply patches
patch -Np1 -i ../coreutils-9.7-i18n-1.patch
patch -Np1 -i ../coreutils-9.7-upstream_fix-1.patch

# Configure
autoreconf -fiv
./configure --prefix=/usr            \
            --enable-no-install-program=kill,uptime

# Build
make

# Install
make DESTDIR=$P install

# Move programs to proper locations
mv -v $P/usr/bin/chroot $P/usr/sbin
mv -v $P/usr/share/man/man1/chroot.1 $P/usr/share/man/man8/chroot.8
sed -i 's/"1"/"8"/' $P/usr/share/man/man8/chroot.8
