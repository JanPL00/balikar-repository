#!/bin/bash
set -e

# Attr 2.5.2 build script based on LFS 12.4

# Configure
./configure --prefix=/usr     \
            --disable-static  \
            --sysconfdir=/etc \
            --docdir=/usr/share/doc/attr-2.5.2

# Build
make

# Install
if [ -n "$DESTDIR" ]; then
    make DESTDIR="$DESTDIR" install
else
    make install
fi
